{
    "functions": {
        "source": "functions",
        "runtime": "nodejs18",
        "ignore": [
            "node_modules",
            ".git"
        ]
    },
    "hosting": {
        "public": "dist",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    }
}